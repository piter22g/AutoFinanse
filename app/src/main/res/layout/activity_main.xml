<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="w54710.autofinanse.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wydatki_ogolem"
        android:id="@+id/textView"
        android:layout_above="@+id/podsumowanie_wydatkow"
        android:textAllCaps="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="150zÅ‚"
        android:textStyle="bold"
        android:id="@+id/podsumowanie_wydatkow"
        android:textSize="55sp"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dodaj_wydatki"
        android:id="@+id/button"
        android:onClick="addWydatek"
        android:layout_below="@+id/podsumowanie_wydatkow"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
